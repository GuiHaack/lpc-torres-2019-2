        {
        <tr>
            <td>@Model.maiorConsumo.dataLeitura.ToString("dd/MM/yyyy")</td>
            <td>@Model.maiorConsumo.kwGasto</td>
            <td>R$ @Model.maiorConsumo.valorAPagar</td>
            <td>@Model.maiorConsumo.dataPagamento.ToString("dd/MM/yyyy")</td>
            <td>@Model.maiorConsumo.mediaConsumo</td>
        </tr>
        }
    </tbody>
</table>